// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-arm64-openssl-3.0.x"]
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

// Enums
enum Role {
  master
  admin
  caixa
  gerente
}

enum StatusEmpresa {
  PENDENTE
  ATIVO
  PAUSADO
  EM_TESTE
  CANCELADO
}

enum StatusCaixa {
  ABERTO
  FECHADO
}

enum MetodoPagamento {
  dinheiro
  debito
  credito
  pix
}

enum TipoMovimentacao {
  ENTRADA
  AJUSTE_QUEBRA
  AJUSTE_INVENTARIO
  DEVOLUCAO
  VENDA
}

enum TipoMovimentacaoCaixa {
  SANGRIA
  SUPRIMENTO
  ABERTURA
}

enum CicloPlano {
  MENSAL
  ANUAL
}

// Models
model Account {
  id                String  @id @default(cuid())
  userId            String
  type              String
  provider          String
  providerAccountId String
  refresh_token     String? @db.Text
  access_token      String? @db.Text
  expires_at        Int?
  token_type        String?
  scope             String?
  id_token          String? @db.Text
  session_state     String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model User {
  id            String    @id @default(cuid())
  name          String?
  email         String    @unique
  emailVerified DateTime?
  image         String?
  password      String?   @db.Text
  nome          String?
  role          Role      @default(caixa)
  empresaId     String?   @map("empresa_id")
  createdAt     DateTime  @default(now()) @map("created_at")
  metaMensal    Decimal   @default(0) @map("meta_mensal") @db.Decimal(10, 2)
  mustChangePassword Boolean @default(false) @map("must_change_password")
  tourCompleted Boolean   @default(false) @map("tour_completed")

  accounts      Account[]
  sessions      Session[]
  sales         Sale[]
  movimentacoes MovimentacaoEstoque[]
  movimentacoesCaixa MovimentacaoCaixa[]
  caixas        Caixa[]
  avisosEnviados   Aviso[] @relation("Remetente")
  avisosRecebidos  Aviso[] @relation("Destinatario")
  empresa       Empresa?              @relation(fields: [empresaId], references: [id])

  @@map("users")
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Empresa {
  id              String        @id @default(cuid())
  nome            String
  status          StatusEmpresa @default(PENDENTE)
  plano           String        @default("PRO") @map("plano")
  vencimentoPlano DateTime?     @map("vencimento_plano")
  diaVencimento   Int           @default(10) @map("dia_vencimento")
  telefone        String?
  cpfCnpj         String?       @unique @map("cpf_cnpj")
  asaasCustomerId String?       @unique @map("asaas_customer_id")
  asaasSubscriptionId String?   @unique @map("asaas_subscription_id")
  webhookEventId  String?       @map("webhook_event_id") // Idempotência do último webhook processado
  
  // Assinatura e Dados Fiscais
  ciclo           CicloPlano    @default(MENSAL)
  enderecoLogradouro String?    @default("") @map("endereco_logradouro")
  enderecoNumero     String?    @default("") @map("endereco_numero")
  enderecoBairro     String?    @default("") @map("endereco_bairro")
  enderecoCidade     String?    @default("") @map("endereco_cidade")
  enderecoUf         String?    @default("") @map("endereco_uf")
  enderecoCep        String?    @default("") @map("endereco_cep")
  
  liberacaoTemporariaAte DateTime? @map("liberacao_temporaria_ate")
  ultimoDesbloqueio      DateTime? @map("ultimo_desbloqueio")
  cupomAplicado          String?   @map("cupom_aplicado")

  cicloPagamento  String        @default("MENSAL") @map("ciclo_pagamento") // Mantido por legado, mas use 'ciclo'
  formaPagamento  String        @default("BOLETO_PIX") @map("forma_pagamento")
  createdAt       DateTime      @default(now()) @map("created_at")
  dataCriacao     DateTime      @default(now()) @map("data_criacao") // Redundante mas solicitado

  users         User[]
  products      Product[]
  sales         Sale[]
  movimentacoes MovimentacaoEstoque[]
  avisos        Aviso[]
  categories    Category[]
  Caixa         Caixa[]
  cancelamentos Cancelamento[]

  @@map("empresas")
}

model Category {
  id        String   @id @default(cuid())
  nome      String
  empresaId String   @map("empresa_id")
  createdAt DateTime @default(now()) @map("created_at")

  empresa  Empresa   @relation(fields: [empresaId], references: [id], onDelete: Cascade)
  products Product[]

  @@index([empresaId])
  @@map("categories")
}

model Product {
  id            String   @id @default(cuid())
  nome          String
  sku           String
  precoVenda    Decimal  @map("preco_venda") @db.Decimal(10, 2)
  precoCompra   Decimal  @default(0) @map("preco_compra") @db.Decimal(10, 2)
  estoqueAtual  Int      @default(0) @map("estoque_atual") // Campo de cache - soma de todos os lotes
  estoqueMinimo Int      @default(5) @map("estoque_minimo")
  imagemUrl     String?  @map("imagem_url")
  empresaId     String?  @map("empresa_id")
  categoryId    String?  @map("category_id")
  createdAt     DateTime @default(now()) @map("created_at")
  updatedAt     DateTime @updatedAt @map("updated_at")

  empresa       Empresa?              @relation(fields: [empresaId], references: [id])
  category      Category?             @relation(fields: [categoryId], references: [id])
  saleItems     SaleItem[]
  movimentacoes MovimentacaoEstoque[]
  lotes         Lote[]

  @@unique([sku, empresaId])
  @@index([empresaId])
  @@map("products")
}

model Lote {
  id           String    @id @default(cuid())
  numeroLote   String    @map("numero_lote")
  dataValidade DateTime? @map("data_validade")
  precoCompra  Decimal   @default(0) @map("preco_compra") @db.Decimal(10, 2)
  quantidade   Int       @default(0)
  produtoId    String    @map("produto_id")
  createdAt    DateTime  @default(now()) @map("created_at")
  dataCompra   DateTime? @default(now()) @map("data_compra")

  produto Product @relation(fields: [produtoId], references: [id], onDelete: Cascade)
  movimentacoes MovimentacaoEstoque[]

  @@index([produtoId])
  @@index([dataValidade])
  @@map("lotes")
}

model Sale {
  id              String          @id @default(cuid())
  userId          String          @map("user_id")
  empresaId       String?         @map("empresa_id")
  dataHora        DateTime        @default(now()) @map("data_hora")
  valorTotal      Decimal         @map("valor_total") @db.Decimal(10, 2)
  valorRecebido   Decimal?        @map("valor_recebido") @db.Decimal(10, 2)
  troco           Decimal?        @map("troco") @db.Decimal(10, 2)
  metodoPagamento MetodoPagamento @map("metodo_pagamento")
  createdAt       DateTime        @default(now()) @map("created_at")

  user      User       @relation(fields: [userId], references: [id])
  empresa   Empresa?   @relation(fields: [empresaId], references: [id])
  saleItems SaleItem[]

  @@index([empresaId])
  @@map("sales")
}

model SaleItem {
  id               String  @id @default(cuid())
  saleId           String  @map("sale_id")
  productId        String  @map("product_id")
  quantidade       Int
  precoUnitario    Decimal @map("preco_unitario") @db.Decimal(10, 2)
  custoUnitario    Decimal @default(0) @map("custo_unitario") @db.Decimal(10, 2)
  descontoAplicado Decimal @default(0) @map("desconto_aplicado") @db.Decimal(10, 2)
  subtotal         Decimal @db.Decimal(10, 2)

  sale    Sale    @relation(fields: [saleId], references: [id])
  product Product @relation(fields: [productId], references: [id])

  @@map("sale_items")
}

model MovimentacaoEstoque {
  id               String           @id @default(cuid())
  produtoId        String           @map("produto_id")
  usuarioId        String           @map("usuario_id")
  empresaId        String           @map("empresa_id")
  tipo             TipoMovimentacao
  quantidade       Int
  motivo           String?
  loteId           String?          @map("lote_id")
  dataMovimentacao DateTime         @default(now()) @map("data_movimentacao")

  produto Product @relation(fields: [produtoId], references: [id])
  usuario User    @relation(fields: [usuarioId], references: [id])
  empresa Empresa @relation(fields: [empresaId], references: [id])
  lote    Lote?   @relation(fields: [loteId], references: [id])

  @@map("movimentacoes_estoque")
}

model Aviso {
  id             String   @id @default(cuid())
  mensagem       String   @db.Text
  importante     Boolean  @default(false)
  lido           Boolean  @default(false)
  empresaId      String?  @map("empresa_id")
  remetenteId    String   @map("remetente_id")
  destinatarioId String?  @map("destinatario_id") // Se null, é para toda a empresa (ou admin da empresa)
  criadoEm       DateTime @default(now()) @map("criado_em")

  empresa      Empresa? @relation(fields: [empresaId], references: [id], onDelete: Cascade)
  remetente    User     @relation("Remetente", fields: [remetenteId], references: [id])
  destinatario User?    @relation("Destinatario", fields: [destinatarioId], references: [id])

  @@index([empresaId])
  @@index([destinatarioId])
  @@map("avisos")
}

model Caixa {
  id             String      @id @default(cuid())
  usuarioId      String      @map("usuario_id")
  empresaId      String      @map("empresa_id")
  saldoInicial   Decimal     @map("saldo_inicial") @db.Decimal(10, 2)
  saldoFinal     Decimal?    @map("saldo_final") @db.Decimal(10, 2)

  valorInformadoDinheiro Decimal? @map("valor_informado_dinheiro") @db.Decimal(10, 2)
  valorInformadoPix      Decimal? @map("valor_informado_pix") @db.Decimal(10, 2) // Deprecado, manter por histórico
  valorInformadoCartao   Decimal? @map("valor_informado_cartao") @db.Decimal(10, 2) // Deprecado, manter por histórico
  valorInformadoMaquininha Decimal? @map("valor_informado_maquininha") @db.Decimal(10, 2) // Novo campo unificado

  justificativa          String?  @db.Text
  quebraDeCaixa  Decimal?    @map("quebra_de_caixa") @db.Decimal(10, 2)
  divergenciaDinheiro Decimal? @map("divergencia_dinheiro") @db.Decimal(10, 2) // Auditoria interna

  status         StatusCaixa @default(ABERTO)
  dataAbertura   DateTime    @default(now()) @map("data_abertura")
  dataFechamento DateTime?   @map("data_fechamento")

  usuario User    @relation(fields: [usuarioId], references: [id])
  empresa Empresa @relation(fields: [empresaId], references: [id], onDelete: Cascade)
  movimentacoes MovimentacaoCaixa[]

  @@index([usuarioId])
  @@index([empresaId])
  @@index([status])
  @@map("caixas")
}

model MovimentacaoCaixa {
  id          String                @id @default(cuid())
  caixaId     String                @map("caixa_id")
  usuarioId   String                @map("usuario_id")
  tipo        TipoMovimentacaoCaixa
  valor       Decimal               @db.Decimal(10, 2)
  metodoPagamento MetodoPagamento? @map("metodo_pagamento")
  descricao   String?
  dataHora    DateTime              @default(now()) @map("data_hora")

  caixa   Caixa @relation(fields: [caixaId], references: [id], onDelete: Cascade)
  usuario User  @relation(fields: [usuarioId], references: [id])

  @@index([caixaId])
  @@index([usuarioId])
  @@map("movimentacoes_caixa")
}

model Cancelamento {
  id        String   @id @default(cuid())
  empresaId String   @map("empresa_id")
  motivo    String
  feedback  String?  @db.Text
  data      DateTime @default(now())

  empresa   Empresa  @relation(fields: [empresaId], references: [id])
  
  @@map("cancelamentos")
}

model Cupom {
  codigo              String    @id
  descontoPorcentagem Float     @map("desconto_porcentagem")
  validoAte           DateTime? @map("valido_ate")
  usosAtuais          Int       @default(0) @map("usos_atuais")
  limiteUsos          Int?      @map("limite_usos")

  @@map("cupons")
}
